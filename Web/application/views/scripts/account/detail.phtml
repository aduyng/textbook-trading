<?php
if( !empty($this->record)){
	include_once 'views/helpers/Account.php';

	$helper = new AccountHelper($this);
	$this->response = $helper->format($this->record);
	
	$college = $this->record->getCollege();
	
	if( !empty($college) ){
		include_once 'views/helpers/College.php';
		$helper = new CollegeHelper($this);
		
		$this->response['college'] = $helper->format($college);
	}
}

?>